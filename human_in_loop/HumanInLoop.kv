<RootWidget>:
    id: Main
    Sample_Screen:
        id: sampl
        name: "Sample_Screen"
    Annotation_Screen:
        id: annot
        name: "Annotation_Screen"
    Manipulation_Screen:
        id: manip
        name: "Manipulation_Screen"


<Sample_Screen>:
    GridLayout:
        rows:5
        cols:1
        TextInput:
            multiline: True
            id: html_sample
            size_hint_y: 9.5
            text: "sample"
            font_size: 40
        Button:
            text: "Next sample, please. That is no longer of use"
            font_size: 30
            on_press: root.manager.sampler_proceed()
        Button:
            text: "Add selected text as sample to the library"
            font_size: 30
            on_press: root.manager.sampler_add()
        Button:
            text: "Selection is complicated language, liguistizize one day!"
            font_size: 30
            on_press: root.manager.complicated_selection()
        Button:
            text: "Go annotating. (Don't forget to wait :)"
            font_size: 30
            on_press: root.manager.shit()


<Annotation_Screen>:
    GridLayout:
        rows:5
        cols:1
        Label:
            halign: "center"
            valign: "middle"
            markup: True
            size_hint_y: 9.5
            text_size: self.size
            multiline: True
            id: sample
            text: "sample"
            font_size: 40
        Button:
            text: "Well done! Take it as is with guarantee of correctnes, next one!"
            font_size: 30
            on_press: root.manager.ok()
        Button:
            text: "That is complicated language, liguistizize one day!"
            font_size: 30
            on_press: root.manager.complicated_sample()
        Button:
            text: "Oh my god, never mind. Or: I can't do that!"
            font_size: 30
            on_press: root.manager.shit()
        Button:
            text: "Manipulate, human!"
            font_size: 30
            on_press: root.manager.manipulate()

<RecycleViewRow>:
    orientation: 'vertical'
    Label:
        text: root.kind
        font_size: 30
    CheckBox:
        id : active_or_not
        active: root.able
    SpanSlider:
        id: start
        min: 0
        max: root.length
        value: root.start
        step: 1
        orientation: 'horizontal'
    SpanSlider:
        id: end
        min: 0
        max: root.length
        value: root.end
        step: 1
        orientation: 'horizontal'

<SliderView>:
    viewclass: 'RecycleViewRow'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<Manipulation_Screen>:
    GridLayout:
        rows:16
        cols:1
        Label:
            halign: "center"
            valign: "middle"
            markup: True
            size_hint_y: 5.5
            text_size: self.size
            multiline: True
            id: sample
            text: "sample"
            font_size: 40
        Label:
            id: spans
            text: "spans"
            font_size: 30
        SliderView:
            id: spansliderview
            size_hint_y: 5.5
            data: [{'text':'abrakadabra', 'id':'0'}, {'text':'obrokodobro', 'id':'1'}]
        Button:
            text: "Ok, take it as is, next one!"
            font_size: 30
            on_press: root.manager.ok()
        Button:
            text: "Oh my godness, put that away."
            font_size: 30
            on_press: root.manager.shit()


